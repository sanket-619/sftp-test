# SFTP Server Configuration
SFTP_PORT=2222
SFTP_HOST=127.0.0.1
SFTP_MAX_CONNECTIONS=100

# SFTP Path Configuration
SFTP_USER_BASE_PATH=users
SFTP_DEFAULT_SUBDIRS=invoices,ledgers
SFTP_CREATE_DEFAULT_SUBDIRS=true

# AWS S3 Configuration
S3_BUCKET=your-sftp-bucket-name
AWS_REGION=ap-south-1
S3_MAX_FILE_SIZE=104857600

# Authentication
SFTP_DEFAULT_USER=user

# Logging
LOGGING_ENABLED=true
LOG_LEVEL=info
LOG_FILE=

# Security
ALLOWED_EXTENSIONS=
BLOCKED_EXTENSIONS=.exe,.bat,.sh
MAX_DIRECTORY_DEPTH=10

# AWS Credentials (set these or use AWS CLI configuration)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: AWS Session Token (for temporary credentials)
# AWS_SESSION_TOKEN=your-session-token

# Optional: AWS Profile (if using AWS CLI profiles)
# AWS_PROFILE=your-profile-name
